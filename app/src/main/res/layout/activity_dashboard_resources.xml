<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/brandFillTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meus Recursos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#111827" />

        <Button
            android:id="@+id/btnAddRecurso"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#2563EB"
            android:text="Adicionar Recurso"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/listaRecursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Card Modelo de Recurso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quadra 1"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponível"
                        android:textStyle="bold"
                        android:textColor="#059669"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="#DCFCE7" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Setor A - Arena Central\nFutsal\nR$ 120,00/hora"
                    android:textColor="#6B7280" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Agendar"
                        android:textAllCaps="false"
                        android:backgroundTint="#2563EB"
                        android:textColor="@android:color/white" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="0dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:backgroundTint="#E5E7EB"
                        android:textColor="#111827" />
                </LinearLayout>
            </LinearLayout>

            <!-- Outro card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quadra 2"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ocupada"
                        android:textStyle="bold"
                        android:textColor="#DC2626"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="#FEE2E2" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Setor B - Arena Central\nVôlei\nR$ 100,00/hora"
                    android:textColor="#6B7280" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Agendar"
                        android:textAllCaps="false"
                        android:backgroundTint="#2563EB"
                        android:textColor="@android:color/white" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="0dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:backgroundTint="#E5E7EB"
                        android:textColor="#111827" />
                </LinearLayout>
            </LinearLayout>

            <!-- Terceiro card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quadra 3"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manutenção"
                        android:textStyle="bold"
                        android:textColor="#B45309"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="#FEF3C7" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Setor C - Arena Central\nBasquete\nR$ 150,00/hora"
                    android:textColor="#6B7280" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Agendar"
                        android:textAllCaps="false"
                        android:backgroundTint="#2563EB"
                        android:textColor="@android:color/white" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="0dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Editar"
                        android:textAllCaps="false"
                        android:backgroundTint="#E5E7EB"
                        android:textColor="#111827" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>



